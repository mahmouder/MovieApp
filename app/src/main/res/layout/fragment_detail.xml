<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_scrollView"
    android:layout_width="match_parent"
    android:background="@android:color/background_dark"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@android:color/background_dark"
        tools:context="com.example.android.movieapp.app.DetailActivityFragment"
        tools:showIn="@layout/activity_detail">

        <ImageView
            android:id="@+id/detail_poster"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_poster"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:textSize="@dimen/text_size_title"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/detail_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_title"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/text_size_rating"
            android:text="Rating: "
            android:textColor="@android:color/background_light"/>

        <TextView
            android:id="@+id/detail_release"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_rating"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/text_size_rating"
            android:text="Release Date: "
            android:textColor="@android:color/background_light"/>

        <TextView
            android:id="@+id/detail_plot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_release"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/text_size_plot"
            android:text="Overview: "
            android:textColor="@android:color/background_light"/>


    </RelativeLayout>

</ScrollView>